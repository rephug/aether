{
  "name": "aether-vscode",
  "displayName": "AETHER",
  "description": "Minimal VS Code client for AETHER LSP hover",
  "version": "0.0.1",
  "publisher": "aether",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onCommand:aether.restartServer",
    "onCommand:aether.selectInferenceProvider",
    "onCommand:aether.indexOnce",
    "onCommand:aether.searchSymbols",
    "onCommand:aether.openSymbolResult"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aether.restartServer",
        "title": "AETHER: Restart Server"
      },
      {
        "command": "aether.selectInferenceProvider",
        "title": "AETHER: Select Inference Provider"
      },
      {
        "command": "aether.indexOnce",
        "title": "AETHER: Index Once"
      },
      {
        "command": "aether.searchSymbols",
        "title": "AETHER: Search Symbols"
      },
      {
        "command": "aether.openSymbolResult",
        "title": "AETHER: Open Symbol Result"
      }
    ],
    "configuration": {
      "title": "AETHER",
      "properties": {
        "aether.inferenceProvider": {
          "type": "string",
          "enum": ["auto", "mock", "gemini", "qwen3_local"],
          "default": "auto",
          "description": "Inference provider used by aetherd."
        },
        "aether.inferenceModel": {
          "type": "string",
          "enum": [
            "qwen2.5-coder:7b-instruct-q4_K_M",
            "qwen2.5-coder:1.5b-instruct-q4_K_M",
            "gemini-2.0-flash"
          ],
          "default": "gemini-2.0-flash",
          "description": "Model name passed to the selected provider for SIR generation."
        },
        "aether.inferenceEndpoint": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Local HTTP endpoint for qwen3_local provider."
        },
        "aether.geminiApiKeyEnv": {
          "type": "string",
          "default": "GEMINI_API_KEY",
          "description": "Environment variable name containing Gemini API key."
        },
        "aether.searchMode": {
          "type": "string",
          "enum": ["lexical", "semantic", "hybrid"],
          "default": "lexical",
          "description": "Search mode used by AETHER symbol search commands."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "compile": "npm run build",
    "typecheck": "tsc -p . --noEmit",
    "smoke": "node ./scripts/smoke.js",
    "verify": "npm run build && npm run smoke"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.6.3"
  }
}
